pipeline {
    agent {
        label 'maven'
    }
    tools {
        jdk 'openjdk8'
        maven 'maven363'
    }
    stages {
        stage('Test') {
            steps {
                sh "mvn clean test"
            }
        }
        stage('Packaging') {
            steps {
                sh "mvn package -DskipTests=true"

            }
            post {
                success {
                    echo "Inside Packaging stage -Success"
                }
                always {
                    echo "Inside packaging stage -Always"
                }

            }

        } 
    }